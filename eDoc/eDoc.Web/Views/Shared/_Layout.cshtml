<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/unobrtrusive")
    <script src="~/Scripts/http-requester.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">

                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><img src="~/img/HackFMI2.0.png" style="height:30px;"/></li>
                        <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                        <li>@Html.ActionLink("е-Документи", "Index", "Document")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <div class="navbar navbar navbar-fixed-bottom modal-footer">HackFmi</div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
