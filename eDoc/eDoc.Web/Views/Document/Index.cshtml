@model IEnumerable<eDoc.Web.ViewModels.DocumentIndexVM>

@{
    ViewBag.Title = "Index";
}

<h2>Моите документи</h2>

<p>
    @Html.ActionLink("Създай нов", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Автор
        </th>
        <th>
            Дата
        </th>
        <th>
            Статус
        </th>
        <th>
            Тип
        </th>
        <th>
            Потвърдено чрез E-mail
        </th>
        <th>
            Потвърденто чре GSM
        </th>
        <th>
            Отговор
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Status.ToLower() == "pending")
                {
                    <p class="alert alert-dismissable alert-warning">Обработване...</p>
                }
                else if (item.Status.ToLower() == "rejected")
                {
                    <p class="alert alert-dismissable alert-danger">Отказана</p>
                }
                else if (item.Status.ToLower() == "unverified")
                {
                    <p class="alert alert-dismissable alert-warning">Невврифицирана</p>
                }
                else if (item.Status.ToLower() == "approved")
                {
                    <p class="alert alert-dismissable alert-success">Одобрена</p>
                }
                else
                {
                    <p class="alert alert-dismissable alert-info">@Html.DisplayFor(modelItem => item.Status)</p>
                }
                
            </td>
            <td >
                <p class ="alert alert-dismissable alert-info"> @Html.DisplayFor(modelItem => item.Type) </p>
            </td>
            <td>
                @if (item.EmailValidated)
                {
                    <p class="alert alert-dismissable alert-success">верифицарана</p>
                }
                else
                {
                    <p class="alert alert-dismissable alert-danger">неверифицарана</p>
                }
            </td>
            <td>
                @if (item.PhoneValidated)
                {
                    <p class="alert alert-dismissable alert-success">верифицарана</p>
                }
                else
                {
                    <p class="alert alert-dismissable alert-danger">неверифицарана</p>
                }
            </td>
            <td>
                <a href="/Admin/Answer/@item.Id" class="btn btn-primary">Отговори</a>
            </td>
            <td>
                @Html.ActionLink("Редактирай", "Edit", new { id = item.Id }, new { @class = "btn btn-default", style="display:block" }) 
                @Html.ActionLink("Детайли", "Details", new { id = item.Id }, new { @class = "btn btn-default", style = "display:block; margin-top:5px; margin-bottom: 5px;" }) 
                @Html.ActionLink("Изтрий", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", style = "display:block" })
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>
    }
</table>
